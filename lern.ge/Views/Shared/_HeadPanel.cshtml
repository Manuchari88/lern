<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .top-bar {
        background-color: #0F172A; /* მუქი ლურჯი ფონი */
        color: #FFFFFF;
        font-size: 1.1rem;
        padding: 10px 20px;
        position: fixed; /* ასე ხდება მუდმივად ეკრანზე */
        top: 0; /* ზედა ნაწილი */
        left: 0; /* მარცხენა მხარე */
        width: 100%; /* დაიფაროს მთელ სიგანეზე */
        z-index: 9999; /* სხვაზე მაღლა იყოს */
    }

        .top-bar .title {
            color: #FACC15; /* მუქი ყვითელი */
            font-weight: 700;
            font-size: 1.25rem; /* უფრო დიდი სათაური */
            letter-spacing: 0.3px;
        }

        .top-bar .contact-info {
            font-weight: 500;
        }

            .top-bar .contact-info i {
                margin-right: 6px;
                font-size: 1.2rem;
                color: #22C55E; /* მწვანე */
            }

            .top-bar .contact-info .phone {
                color: #22C55E; /* იგივე ფერი, რაც აიქონს */
                font-weight: 600;
                font-size: 1.15rem;
            }

        .top-bar a {
            color: #FFFFFF;
            margin-left: 14px;
            transition: 0.2s;
            text-decoration: none;
            font-size: 1.15rem;
        }

            .top-bar a:hover {
                color: #FACC15;
            }
</style>

<div class="container-fluid top-bar">
    <div class="d-flex flex-column flex-md-row align-items-center justify-content-between text-center text-md-start">

        <!-- მარცხენა მხარე -->
        <div class="title mb-1 mb-md-0">
