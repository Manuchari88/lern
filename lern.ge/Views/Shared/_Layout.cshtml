    <meta name="keywords" content="ავტოსკოლა საჩხერეში, საჩხერის ავტოსკოლა, საჩხერის მარშუტები, მართვის მოწმობის სწავლება, საგზაო წესები, Lern.ge">

    <!-- Open Graph -->
    <meta property="og:title" content="ავტოსკოლა საჩხერეში – ინსტრუქტორი გიორგი გვარუციძე" />
    <meta property="og:description" content="დაგვიკავშირდით ტელ: 551 77 14 15 – საჩხერის გამოცდისთვის მომზადება." />
    <meta property="og:image" content="https://lern.ge/images/fb.webp?v=5" />
    <meta property="og:url" content="https://lern.ge" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Lern.ge – ავტოსკოლა საჩხერეში" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="ავტოსკოლა საჩხერეში">
    <meta name="twitter:description" content="ავტოსკოლა საჩხერეში - მოედნის, ქალაქის და საგამოცდო მარშუტებზე მომზადება.">
    <meta name="twitter:image" content="https://lern.ge/images/fb.webp">

    <meta name="google-site-verification" content="jP7WiqdMrM15zYd95XuSOXPyc-4w1L3qGjDV8ojjibo" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />

    <!-- Bootstrap CSS deferred -->
    <link rel="preload" as="style" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    </noscript>

    <!-- Site CSS preload & deferred -->
    <link rel="preload" as="style" href="~/css/site.css" onload="this.onload=null;this.rel='stylesheet'" asp-append-version="true">
    <noscript>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    </noscript>

    <style>
        body {
            background-color: #fff;
            color: #212529;
            margin: 0;
            font-family: sans-serif;
        }

        .loading-hidden {
            display: none !important;
        }

        .wide-contact-section {
            background-color: #f8f9fa;
            color: #212529;
            padding: 50px 0;
        }

        footer {
            background-color: #1B1B1B;
            color: #bbb;
        }
    </style>

    <!-- JSON-LD -->
    <script type="application/ld+json">
        @Html.Raw(@"{
          ""@context"": ""https://schema.org"",
          ""@type"": ""DrivingSchool"",
                    ""name"": ""Lern.ge - ავტოსკოლა საჩხერეში"",
                    ""address"": {
                ""@type"": ""PostalAddress"",
                        ""addressLocality"": ""Sachkhere"",
                        ""addressCountry"": ""GE""
                    },
                    ""url"": ""https://lern.ge"",
          ""telephone"": "" + 995551771415""
                }")
    </script>
</head>
<body>
    <header>
        <partial name="_HeadPanel" />
    </header>

    <partial name="_Slider" />

    <main role="main">
        @RenderBody()

        <!-- Reviews Section -->
        <section class="mt-5 mb-5 text-center">
            <h2 class="fw-bold mb-4 loading-hidden" id="reviews-header">ჩვენი მომხმარებლების შეფასებები</h2>
            <div class="elfsight-app-db7fd3aa-fcfd-491b-99c7-0136c7f9b024 loading-hidden"
                 data-elfsight-app-lazy
                 id="elfsight-reviews-widget"
                 style="min-height: 400px;"></div>
        </section>

        <!-- Contact Section -->
        <section class="wide-contact-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mb-4 mb-lg-0">
                        <h3 class="fw-bold mb-3">დაგვიკავშირდით დღესვე საჩხერის ავტოსკოლას!</h3>
                        <p class="lead">მიიღეთ დეტალური ინფორმაცია საჩხერის მარშუტების და გამოცდის შესახებ.</p>
                        <ul class="list-unstyled mt-4">
                            <li class="mb-2"><strong>ლოკაცია:</strong> საჩხერე</li>
                            <li class="mb-2"><strong>ტელეფონი:</strong> <a href="tel:+995551771415">+995 551 77 14 15</a></li>
                        </ul>
                        <div class="social-links mt-4">
                            <a href="https://www.facebook.com/p/..." target="_blank" class="btn btn-outline-primary me-2">Facebook</a>
                            <a href="https://wa.me/+995551771415" target="_blank" class="btn btn-outline-success">WhatsApp</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="border-top footer mt-5 text-center py-3">
        &copy; @DateTime.Now.Year - საჩხერის ავტოსკოლა
    </footer>

    <!-- JS deferred -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://elfsightcdn.com/platform.js" async></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var header = document.getElementById('reviews-header');
                var widget = document.getElementById('elfsight-reviews-widget');
                if (header) header.classList.remove('loading-hidden');
                if (widget) widget.classList.remove('loading-hidden');
            }, 3000);
        });
    </script>
</body>
</html>
