<style>
    /* ===== Card Styles ===== */
    .card {
        border-radius: 1rem; /* რბილი კუთხეები */
        transition: transform 0.25s ease, box-shadow 0.25s ease; /* hover ეფექტი */
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(0,0,0,0.25); /* მკვეთრი ჩრდილი */
        }

        .card h5, .card h6 {
            font-weight: 800;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .card p {
            text-align: center;
            font-size: 1rem;
            color: #333;
        }

        /* SVG იკონები */
        .card svg {
            width: 3em;
            height: 3em;
            margin-bottom: 1rem;
            fill: currentColor;
        }

    /* Responsive */
    @@media(max - width: 576px)

    {
        .card h5, .card h6

    {
        font-size: 1.1rem;
    }

    .card p {
        font-size: 0.95rem;
    }

    }

    .hero-section {
        max-width: 966px;
        margin: 0 auto;
        padding: 1.5rem 1rem; /* 2rem -> 1.5rem */
    }
    /* Responsive ტექსტი */
    @@media (max-width: 768px) {
        .card h5, .card h6

    {
        font-size: 1.15rem !important;
    }

    .card p {
        font-size: 1.05rem;
    }

    }

    .info-section {
        margin-top: 10px !important; /* 20px -> 10px */
    }

    .info-box {
        border-left: 5px solid #0d6efd; /* პატარა ვიზუალური აქცენტი, მაგალითად primary ფერი */
        background: #f8f9fa; /* მსუბუქი, ჰაეროვანი */
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15); /* ცოტა shadow */
        padding: 2rem 2.5rem;
        transition: transform 0.3s ease;
    }

        .info-box:hover {
            transform: translateY(-5px);
        }

        .info-box h5 {
            font-size: 1.5rem;
        }

        .info-box p {
            font-size: 1.125rem;
            line-height: 1.6;
            color: #495057;
        }

</style>

